<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="640px"
        android:background="@mipmap/sport_bg"
        >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            >

            <View
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/sport_circle"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="今日步数"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                />


            <com.yunxi.phone.utils.NumberRunView
                android:id="@+id/step_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48dp"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>



    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/step_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/spprt_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#666666"
            android:layout_marginTop="40px"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/get_goods_btn"
            android:layout_width="240px"
            android:layout_height="60px"
            android:background="@drawable/red_yuanjiao_itemclick_selector"
            android:text="领取奖励"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_below="@+id/spprt_tips"
            android:layout_marginTop="40px"
            android:layout_centerHorizontal="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:background="@color/white"
            android:layout_below="@+id/get_goods_btn"
            />





    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="近30日奖励详情"
            android:textSize="28px"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            />

    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#666666"
            android:textSize="28px"
            android:text="时间"
            android:gravity="center"

            />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line"
            android:layout_marginTop="14px"
            android:layout_marginBottom="14px"
            />

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:textColor="#666666"
            android:textSize="28px"
            android:text="任务"
            android:layout_weight="1"
            android:gravity="center"
            />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line"
            android:layout_marginTop="14px"
            android:layout_marginBottom="14px"
            />

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:textColor="#666666"
            android:textSize="28px"
            android:text="奖励"
            android:layout_weight="1"
            android:gravity="center"
            />



    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        />

</com.zhy.autolayout.AutoLinearLayout>