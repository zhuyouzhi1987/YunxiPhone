<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/news_third_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/default_itemclick_selector"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/third_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:textSize="30px"
            android:textColor="#666666"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/third_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_below="@+id/third_title"
            >


            <ImageView
                android:id="@+id/third_one_bg"
                android:layout_width="200px"
                android:layout_height="150px"
                android:scaleType="centerCrop"
                android:layout_below="@+id/big_title"
                android:layout_centerHorizontal="true"

                />

            <ImageView
                android:id="@+id/third_two_bg"
                android:layout_width="200px"
                android:layout_height="150px"
                android:layout_marginLeft="20px"
                android:scaleType="centerCrop"
                android:layout_below="@+id/big_title"
                android:layout_centerHorizontal="true"

                />

            <ImageView
                android:id="@+id/third_three_bg"
                android:layout_width="200px"
                android:layout_height="150px"
                android:scaleType="centerCrop"
                android:layout_marginLeft="20px"
                android:layout_below="@+id/big_title"
                android:layout_centerHorizontal="true"
                />


        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/from_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/third_layout"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            >

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="#999999"

                />


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="#999999"
                android:layout_marginLeft="20px"

                />



        </com.zhy.autolayout.AutoLinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            android:layout_below="@+id/from_layout"
            android:layout_marginTop="20px"
            />



    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>