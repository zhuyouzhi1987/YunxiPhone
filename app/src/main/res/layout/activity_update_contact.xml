<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yunxi.phone.activity.AddContactActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/appMainColor">


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/back"
            android:layout_width="80px"
            android:layout_height="80px">

            <ImageView

                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑好友"
            android:textColor="#ffffff"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/title"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="80px">

        <TextView
            android:id="@+id/name_front"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/contact_name"
            android:textColor="#666666"
            android:textSize="34px" />

        <EditText
            android:maxLines="10"
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/name_front"
            android:background="@null"
            android:hint="请输入姓名"
            android:textColor="#666666"
            android:textColorHint="#999999"
            android:maxLength="10"
            android:textCursorDrawable="@drawable/cusor_color"
            android:textSize="28px"></EditText>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/name_layout"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@color/line" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/line"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px">

        <TextView
            android:id="@+id/phone_front"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="电话"
            android:textColor="#666666"
            android:textSize="34px" />

        <EditText
            android:id="@+id/phone_text"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/phone_front"
            android:background="@null"
            android:hint="请输入手机或座机号码"
            android:inputType="numberDecimal"
            android:maxLength="12"
            android:maxLines="1"
            android:textColor="#666666"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/cusor_color"
            android:textSize="28px"></EditText>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/phone_layout"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@color/line" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/remark_layout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/line2"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px">

        <TextView
            android:id="@+id/remark_front"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="备注"
            android:textColor="#999999"
            android:textSize="34px" />

        <EditText
            android:id="@+id/remark_text"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/remark_front"
            android:background="@null"
            android:hint="请输入40字以内备注"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/cusor_color"
            android:maxLength="40"
            android:textSize="28px"></EditText>

    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/reg_btn"
        android:layout_width="480px"
        android:layout_height="72px"
        android:layout_below="@+id/remark_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80px"
        android:background="@drawable/green_yuanjiao_itemclick_selector"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="完成修改"
            android:textColor="@color/white"
            android:textSize="28px"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
