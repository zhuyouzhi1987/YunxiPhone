<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dail_bg">
    
    
    <ImageView
        android:id="@+id/default_icon"
        android:layout_width="150px"
        android:layout_height="150px"
        android:src="@mipmap/dail_default_icon"
        android:layout_marginTop="100px"
        android:layout_centerHorizontal="true"

        />



        <ImageView
            android:id="@+id/wifi_icon"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40px"
            android:layout_marginRight="40px"
            />



    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:layout_below="@+id/default_icon"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number"
        android:format="%s"
        android:textSize="40px"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="40px"
        android:visibility="gone"
        android:id="@+id/timer"/>

    <TextView
        android:id="@+id/dail_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:textColor="@color/white"
        android:layout_below="@+id/phone_number"
        android:layout_marginTop="40px"
        android:layout_centerHorizontal="true"
        />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70px"
        >


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/mianti_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"

            >
            <ImageView
                android:id="@+id/mianti_btn"
                android:layout_width="50px"
                android:layout_height="90px"
                android:src="@mipmap/mianti_close"
                android:layout_gravity="center_horizontal"
                />


        </com.zhy.autolayout.AutoLinearLayout>



        <ImageView
            android:id="@+id/shutdown"
            android:layout_width="110px"
            android:layout_height="110px"
            android:src="@mipmap/shutdown"
            android:layout_centerHorizontal="true"
            />


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/nosound_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:layout_alignParentRight="true"

            >
            <ImageView
                android:id="@+id/nosound_btn"
                android:layout_width="50px"
                android:layout_height="90px"
                android:src="@mipmap/nosound_close"
                android:layout_gravity="center_horizontal"
                />



        </com.zhy.autolayout.AutoLinearLayout>




    </com.zhy.autolayout.AutoRelativeLayout>

    



    </com.zhy.autolayout.AutoRelativeLayout>