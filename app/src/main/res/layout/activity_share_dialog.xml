<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/fl_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/user_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20px"
            android:background="@drawable/white_yuanjiao">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_one"
                android:layout_marginTop="16.0px"
                android:orientation="vertical"
                android:paddingBottom="20.0px">

                <TextView
                    android:id="@+id/hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25px"
                    android:gravity="center_horizontal"
                    android:text="新用户注册填写你的ID ：0 ，各得100云朵 ！"
                    android:textColor="#ff6666"
                    android:textSize="24px" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25px"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/qq_zone"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80px"
                                android:layout_height="80px"
                                android:src="@mipmap/zone_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8px"
                                android:text="空间"
                                android:textColor="@color/textColor"
                                android:textSize="24px" />
                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/qq"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80px"
                                android:layout_height="80px"
                                android:src="@mipmap/qq_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8px"
                                android:text="QQ"
                                android:textColor="@color/textColor"
                                android:textSize="24px" />
                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/weichat"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80px"
                                android:layout_height="80px"
                                android:src="@mipmap/weixin_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8px"
                                android:text="微信"
                                android:textColor="@color/textColor"
                                android:textSize="24px" />
                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/weichat_circle"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80px"
                                android:layout_height="80px"
                                android:src="@mipmap/pyq_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8px"
                                android:text="朋友圈"
                                android:textColor="@color/textColor"
                                android:textSize="24px" />
                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:layout_marginBottom="30px"
                        android:orientation="horizontal">



                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/erweima"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80px"
                                android:layout_height="80px"
                                android:src="@mipmap/ewm_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8px"
                                android:text="二维码"
                                android:textColor="@color/textColor"
                                android:textSize="24px" />
                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/copy"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80px"
                                android:layout_height="80px"
                                android:src="@mipmap/link_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8px"
                                android:text="复制链接"
                                android:textColor="@color/textColor"
                                android:textSize="24px"/>
                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/weibo"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="invisible"
                            >

                            <ImageView
                                android:layout_width="80px"
                                android:layout_height="80px"
                                android:src="@mipmap/weibo_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8px"
                                android:text="微博"
                                android:textColor="@color/textColor"
                                android:textSize="24px" />
                        </com.zhy.autolayout.AutoLinearLayout>


                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/yingyongbao"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="invisible"
                            >

                            <ImageView
                                android:layout_width="80px"
                                android:layout_height="80px"
                                android:src="@mipmap/yyb_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8px"
                                android:text="应用宝"
                                android:textColor="@color/textColor"
                                android:textSize="24px"/>
                        </com.zhy.autolayout.AutoLinearLayout>



                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="8px"
                android:layout_height="8px"
                android:src="@mipmap/rectangle_left" />

            <TextView
                android:layout_width="144px"
                android:layout_height="40px"
                android:background="@color/appMainColor"
                android:gravity="center"
                android:text="邀请方式"
                android:textColor="@color/white"
                android:textSize="24px" />

            <ImageView
                android:layout_width="8px"
                android:layout_height="8px"
                android:src="@mipmap/rectangle_right" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoFrameLayout>
</com.zhy.autolayout.AutoRelativeLayout>