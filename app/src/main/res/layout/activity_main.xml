<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_tabbar">

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        android:layout_above="@+id/bottom_tabbar"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/bottom_tabbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/bottomTabColor"
            android:orientation="horizontal">
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/tab_dial"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_dial_img"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@mipmap/tab_dial_no" />

                <TextView
                    android:id="@+id/tab_dial_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="拨号"
                    android:textColor="@color/bottomTabTxtUnSelectColor"
                    android:textSize="22px" />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/tab_record"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_record_img"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@mipmap/tab_record_hl" />

                <TextView
                    android:id="@+id/tab_record_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记录"
                    android:layout_marginTop="10px"
                    android:textColor="@color/bottomTabTxtSelectColor"
                    android:textSize="22px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/tab_friend"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_friend_img"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@mipmap/tab_friend_no" />

                <TextView
                    android:id="@+id/tab_friend_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通讯录"
                    android:layout_marginTop="10px"
                    android:textColor="@color/bottomTabTxtUnSelectColor"
                    android:textSize="22px" />

            </com.zhy.autolayout.AutoLinearLayout>





            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/tab_cloud"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/tab_cloud_img"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@mipmap/tab_cloud_no" />


                <TextView
                    android:id="@+id/tab_cloud_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_my_img"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:text="赚话费"
                    android:textColor="@color/bottomTabTxtUnSelectColor"
                    android:textSize="22px" />

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoRelativeLayout>
